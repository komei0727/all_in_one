{
  "name": "all_in_one",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "test:integration": "dotenv -e .env.test -- vitest run --config vitest.config.integration.ts",
    "test:e2e": "dotenv -e .env.test -- vitest run --config vitest.config.e2e.ts",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "prepare": "husky",
    "postinstall": "prisma generate",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose stop postgres",
    "services:up": "docker-compose up -d",
    "services:down": "docker-compose down",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:seed": "dotenv -e .env.local -- prisma db seed",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "mail:up": "docker-compose up -d mailhog",
    "mail:down": "docker-compose stop mailhog",
    "mail:logs": "docker-compose logs -f mailhog"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@hookform/resolvers": "^3.9.1",
    "@prisma/client": "^6.10.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@supabase/ssr": "0.6.1",
    "@supabase/supabase-js": "2.48.0",
    "@tanstack/react-query": "5.64.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.523.0",
    "next": "15.3.4",
    "next-auth": "5.0.0-beta.29",
    "nodemailer": "^7.0.3",
    "react": "^19.1.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "7.51.5",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@playwright/mcp": "^0.0.29",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "^20.19.1",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vitejs/plugin-react": "4.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "cuid": "^3.0.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "15.3.0",
    "playwright": "^1.53.1",
    "postcss": "^8",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.6.10",
    "prisma": "^6.10.1",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.20.3",
    "typescript": "^5.4",
    "vitest": "3.2.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
